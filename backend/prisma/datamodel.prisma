type User {
  id: ID! @id @unique
  email: String! @unique
  password: String!
}

type Teacher {
  id: ID! @id @unique
  name: String!
  courses: [Course] #relationship to the Course
  image: String
  isNative: String
  about: String
  experience: String
  education: String
  certifications: String
  user: User #relationship to the User
}

type Course {
  id: ID! @id @unique
  createdAt: DateTime! @createdAt
  title: String!
  details: String!
  price: Int!
  language: String!
  location: String!
  seats: Int!
  startDate: String!
  endDate: String!
  # user: User! #relationship to User
}
