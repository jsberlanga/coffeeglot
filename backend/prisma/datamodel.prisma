type User {
  id: ID! @id
  email: String! @unique
  password: String!
  teacher: Teacher
}

type Teacher {
  id: ID! @id
  name: String!
  courses: [Course]
  isNative: String
  image: String
  about: String
  experience: String
  education: String
  certifications: String
  user: User @relation(link: TABLE)
}

type Course {
  id: ID! @id @unique
  createdAt: DateTime! @createdAt
  title: String!
  details: String!
  price: Int!
  language: String!
  location: String!
  seats: Int!
  startDate: String!
  endDate: String!
  # user: User!
}
